@model IPagedList<Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Vehicles for @ViewBag.CategoryName</h2>

<p>
    @if(User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create", new { categoryId = @ViewBag.CategoryId })
    }
</p>

<form method="get" action="@Url.Action("List")" 
     data-search-ajax="true" data-search-target="#vehicleList">
    <div>
        <input type="search" name="searchTerm" placeholder="Search Here" data-search-autocomplete="@Url.Action("AutoComplete")"/>
        <input type="submit" value="Submit" />
    </div>
</form>


@Html.Partial("_Vehicle", Model)


